#!/bin/bash
# Environment Setup Script for {{ project_name }}
# Uses uv for fast Python package management

set -e  # Exit on error

echo "üöÄ Setting up {{ project_name }}..."

# Colors for output
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Check if uv is installed
echo -e "${YELLOW}Checking for uv...${NC}"
if ! command -v uv &> /dev/null; then
    echo -e "${RED}‚ùå uv not found${NC}"
    echo "Install uv: https://docs.astral.sh/uv/getting-started/installation/"
    echo "Quick install: curl -LsSf https://astral.sh/uv/install.sh | sh"
    exit 1
fi
echo -e "${GREEN}‚úì uv is installed${NC}"

# Initialize git repository if not already initialized
if [ ! -d ".git" ]; then
    echo -e "${YELLOW}Initializing git repository...${NC}"
    git init
    echo -e "${GREEN}‚úì Git repository initialized${NC}"
fi

# Install dependencies with uv sync
echo -e "${YELLOW}Installing dependencies...${NC}"
uv sync --all-extras
echo -e "${GREEN}‚úì Dependencies installed${NC}"

# Install pre-commit hooks
echo -e "${YELLOW}Installing pre-commit hooks...${NC}"
uv run pre-commit install
echo -e "${GREEN}‚úì Pre-commit hooks installed${NC}"

# Create necessary directories
echo -e "${YELLOW}Creating project directories...${NC}"
mkdir -p data/cache data/embeddings data/vectordb logs
echo -e "${GREEN}‚úì Directories created${NC}"

# Create .env file if it doesn't exist
if [ ! -f ".env" ]; then
    echo -e "${YELLOW}Creating .env file...${NC}"
    if [ -f ".env.example" ]; then
        cp .env.example .env
        echo -e "${GREEN}‚úì .env file created${NC}"
        echo -e "${YELLOW}‚ö† Edit .env and add your API keys${NC}"
    fi
fi

echo ""
echo -e "${GREEN}‚ú® Setup complete!${NC}"
echo ""
echo "Next steps:"
echo "  1. Edit .env with your API keys"
echo "  2. Implement your LLM clients in src/core/"
echo "  3. Start building! üöÄ"
echo ""
echo "Quick commands:"
echo "  - Add package: uv add <package>"
echo "  - Run tests: uv run pytest"
echo "  - Format code: uv run ruff format ."
echo "  - Lint code: uv run ruff check ."
echo ""
